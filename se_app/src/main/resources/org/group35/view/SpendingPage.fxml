<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.group35.view.SpendingController"
            stylesheets="@SpendingPage.css"
            styleClass="root-container">

    <top>
        <!-- Navigation Bar and Avatar -->
        <VBox spacing="20">
            <HBox styleClass="nav-row" alignment="CENTER_LEFT" spacing="10">
                <HBox spacing="20" styleClass="nav-bar">
                    <!-- Dashboard -->
                    <Button text="Dashboard" onAction="#gotoDashboard" styleClass="nav-button">
                        <graphic>
                            <SVGPath content="M19,5V7H15V5H19M9,5V11H5V5H9M19,13V19H15V13H19M9,17V19H5V17H9M21,3H13V9H21V3M11,3H3V13H11V3M21,11H13V21H21V11M11,15H3V21H11V15Z"
                                     styleClass="nav-icon"/>
                        </graphic>
                    </Button>
                    <!-- Spending -->
                    <Button text="Spending" onAction="#gotoSpending" styleClass="nav-button-selected">
                        <graphic>
                            <SVGPath content="M3,6H21V18H3V6M12,9A3,3 0 0,1 15,12A3,3 0 0,1 12,15A3,3 0 0,1 9,12A3,3 0 0,1 12,9M7,8A2,2 0 0,1 5,10V14A2,2 0 0,1 7,16H17A2,2 0 0,1 19,14V10A2,2 0 0,1 17,8H7Z"
                                     styleClass="nav-icon-selected"/>
                        </graphic>
                    </Button>
                    <!-- Plan -->
                    <Button text="Plan" styleClass="nav-button">
                        <graphic>
                            <SVGPath content="M19 3H18V1H16V3H8V1H6V3H5C3.89 3 3 3.9 3 5V19C3 20.11 3.9 21 5 21H19C20.11 21 21 20.11 21 19V5C21 3.9 20.11 3 19 3M19 19H5V9H19V19M19 7H5V5H19V7Z"
                                     styleClass="nav-icon"/>
                        </graphic>
                    </Button>
                    <!-- More -->
                    <Button text="More" styleClass="nav-button">
                        <graphic>
                            <SVGPath content="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,13C9.33,13 4,14.33 4,17V20H20V17C20,14.33 14.67,13 12,13Z"
                                     styleClass="nav-icon"/>
                        </graphic>
                    </Button>
                </HBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Avatar + User Info -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <VBox alignment="CENTER_RIGHT" spacing="2">
                        <Label text="Alaric" styleClass="avatar-name"/>
                        <Button text="Logout" styleClass="avatar-logout"/>
                    </VBox>
                    <StackPane styleClass="avatar-container">
                        <ImageView fx:id="avatarImage"
                                   fitWidth="40" fitHeight="40"
                                   styleClass="avatar-image"/>
                    </StackPane>
                </HBox>
            </HBox>

            <!-- New Entry Section -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="new-entry-container">
                <Label text="New entry:" styleClass="new-entry-label"/>
                <Button text="Manual" styleClass="add-button-green">
                    <graphic>
                        <SVGPath content="M3,17.25V21H6.75L17.81,9.94L14.06,6.19L3,17.25M22.7,6.04C23.09,5.65 23.09,5 22.7,4.63L19.37,1.3C19,0.91 18.35,0.91 17.96,1.3L15.12,4.14L18.87,7.89L22.7,4.04Z"
                                 styleClass="add-icon"/>
                    </graphic>
                </Button>
                <Button text="Recognize Bill" styleClass="add-button-brown">
                    <graphic>
                        <SVGPath content="M4,4H20A2,2 0 0,1 22,6V18A2,2 0 0,1 20,20H4A2,2 0 0,1 2,18V6A2,2 0 0,1 4,4M4,6V18H20V6H4M6,9H18V11H6V9M6,13H16V15H6V13Z"
                                 styleClass="camera-icon"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </top>

    <center>
        <!-- Main Content Area -->
        <HBox spacing="20" styleClass="content-container">
            <!-- Left: Spending List -->
            <VBox spacing="15" styleClass="spending-list" HBox.hgrow="ALWAYS" maxWidth="600">
                <Label text="Spendings" styleClass="section-title"/>

                <!-- Rent -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="spending-item">
                    <StackPane>
                        <Circle radius="20" styleClass="icon-circle-dark-blue"/>
                        <Label text="R" styleClass="icon-letter"/>
                    </StackPane>
                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Rent" styleClass="spending-name"/>
                            <Label text="Manual" styleClass="spending-type-manual-small"/>
                        </HBox>
                        <Label text="November 30th" styleClass="spending-date"/>
                    </VBox>
                    <Label text="\$ 1200" styleClass="spending-amount"/>
                </HBox>

                <!-- Netflix -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="spending-item">
                    <StackPane>
                        <Circle radius="20" styleClass="icon-circle-red"/>
                        <Label text="N" styleClass="icon-letter"/>
                    </StackPane>
                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Netflix Family" styleClass="spending-name"/>
                            <Label text="Recurring" styleClass="spending-type-recurring-small"/>
                        </HBox>
                        <Label text="December 11st" styleClass="spending-date"/>
                    </VBox>
                    <Label text="\$ 29.9" styleClass="spending-amount"/>
                </HBox>

                <!-- Utilities -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="spending-item">
                    <StackPane>
                        <Circle radius="20" styleClass="icon-circle-orange"/>
                        <Label text="U" styleClass="icon-letter"/>
                    </StackPane>
                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Utilities" styleClass="spending-name"/>
                        </HBox>
                        <Label text="December 25th" styleClass="spending-date"/>
                    </VBox>
                    <Label text="\$ 189.45" styleClass="spending-amount"/>
                </HBox>

                <!-- McDonald -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="spending-item">
                    <StackPane>
                        <Circle radius="20" styleClass="icon-circle-yellow"/>
                        <Label text="M" styleClass="icon-letter"/>
                    </StackPane>
                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="McDonald" styleClass="spending-name"/>
                        </HBox>
                        <Label text="December 25th" styleClass="spending-date"/>
                    </VBox>
                    <Label text="\$ 15.9" styleClass="spending-amount"/>
                </HBox>

                <!-- Dinner -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="spending-item">
                    <StackPane>
                        <Circle radius="20" styleClass="icon-circle-gray"/>
                        <Label text="D" styleClass="icon-letter"/>
                    </StackPane>
                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Dinner" styleClass="spending-name"/>
                        </HBox>
                        <Label text="December 27th" styleClass="spending-date"/>
                    </VBox>
                    <Label text="\$ 98.7" styleClass="spending-amount"/>
                </HBox>
            </VBox>

            <!-- Right: Budget and AI Summary -->
            <VBox spacing="20" styleClass="info-panel" minWidth="300" maxWidth="350">
                <!-- Budget Panel -->
                <VBox spacing="10" styleClass="budget-panel">
                    <Label text="Budget" styleClass="section-title"/>
                    <HBox alignment="BASELINE_LEFT" spacing="5">
                        <Label text="\$ 200" styleClass="budget-amount"/>
                        <Label text="left to spend" styleClass="budget-left-text"/>
                    </HBox>
                    <ProgressBar progress="0.6" styleClass="budget-progress" maxWidth="Infinity"/>
                </VBox>

                <Separator styleClass="divider"/>

                <!-- AI Summary Panel -->
                <VBox spacing="10" styleClass="ai-panel">
                    <Label text="AI Summary" styleClass="section-title"/>
                    <Text styleClass="ai-summary"
                          text="Most of your recent spending went to essential expenses like rent and utilities, with discretionary spending such as dining out and entertainment..."
                          wrappingWidth="270"/>
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>