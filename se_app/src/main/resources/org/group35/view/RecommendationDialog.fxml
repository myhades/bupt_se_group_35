<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.group35.view.RecommendationDialogController"
            stylesheets="@RecommendationDialog.css"
            styleClass="recommendation-overlay-panel"
            prefWidth="330" prefHeight="320">

    <!-- Header with title and back button -->
    <HBox alignment="CENTER_LEFT" spacing="80"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="12" AnchorPane.rightAnchor="30">

        <!-- Title Section -->
        <HBox alignment="CENTER_LEFT" spacing="12" HBox.hgrow="ALWAYS">
            <Label text="Recommendation" styleClass="title-label"/>

            <!-- Back Button -->
            <Button styleClass="title-back-button" onAction="#handleBack"
                    HBox.hgrow="NEVER">
                <graphic>
                    <SVGPath content="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                             styleClass="title-back-icon"/>
                </graphic>
            </Button>
        </HBox>
    </HBox>

    <!-- Main Content Card -->
    <VBox alignment="TOP_LEFT" spacing="20" styleClass="card"
          AnchorPane.topAnchor="50" AnchorPane.leftAnchor="15"
          AnchorPane.rightAnchor="15" AnchorPane.bottomAnchor="10">

        <!-- Scrollable Text Content -->
        <ScrollPane fx:id="recommendationScrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    VBox.vgrow="ALWAYS"
                    styleClass="scroll-pane"
                    prefWidth="300">
            <VBox alignment="TOP_LEFT" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Text fx:id="recommendationText"
                      wrappingWidth="240"
                      styleClass="recommendation-text"
                      text="Loading recommendations..."/>
            </VBox>
        </ScrollPane>

        <!-- Button Section -->
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <padding>
                <Insets top="10" right="0" bottom="5" left="0"/>
            </padding>
        </HBox>
    </VBox>
</AnchorPane>