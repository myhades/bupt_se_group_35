<?xml version="1.0" encoding="UTF-8"?>

<?import org.group35.view.components.NavBarController?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
    This FXML file is used to define the user interface layout of the Manual Entry Page.
    - The overall page uses a VBox layout as the root container, with a background color of #f0f0f0 and padding of 20 on the top, 40 on the right, 40 on the bottom, and 40 on the left.
    - The top navigation bar uses an HBox layout and contains multiple buttons and icons for navigating to different functional pages (such as the Dashboard, Spending, Plan, More pages, etc.), as well as a user logout function.
    - The main content section also uses a VBox layout, which is divided into a top area with a back button and the page title, and a middle main input area.
    - The middle main input area is further divided into two parts: the AI Recognition part and the Manual Input part.
        - AI Recognition part: It contains a text area for users to describe in natural language, a microphone button for voice - input - related operations, and a convert button for converting the input content.
        - Manual Input part: It contains three text fields for entering the name, amount, and category respectively, and a save button for saving the input information.
    - The background color of the input fields (including the text area and text fields) is set to #a5a5a5, and both the prompt text and the input text are white to provide a clear visual effect.
-->

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.group35.view.ManualEntryController"
      stylesheets="@ManualEntryPage.css"
      styleClass="root-container">

    <!-- NavBar -->
    <NavBarController activePage="SPENDING"/>

    <!-- Main parts -->
    <VBox spacing="20" style="-fx-padding: 10;" VBox.vgrow="ALWAYS">
        <!-- Back Button + Manual Entry -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button styleClass="Back_Button" onAction="#gotoSpending">
                <graphic>
                    <ImageView fx:id="BackButtonImageView" fitWidth="50" fitHeight="50"/>
                </graphic>
            </Button>
            <Label text="Manual Entry" styleClass="ManualEntry_Character"/>
            <Label text="●" styleClass="Dot"/>
        </HBox>

        <!-- The central main area -->
        <HBox spacing="50" alignment="CENTER" VBox.vgrow="ALWAYS">

            <!-- AI Recognition Part -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;" prefWidth="400">
                <Label text="AI Recognition" styleClass="AI_Rec_Character"/>

                <StackPane>
                    <TextArea fx:id="aiTextArea"
                              promptText="Describe with natural language"
                              styleClass="text-area"
                              prefHeight="200" prefWidth="350"/>

                    <Button onAction="#handleMicro" styleClass="Micro_Button" StackPane.alignment="BOTTOM_RIGHT">
                        <graphic>
                            <ImageView fx:id="MicrophoneImageView" fitWidth="30" fitHeight="30"/>
                        </graphic>
                    </Button>
                </StackPane>

                <Button text="Convert →" onAction="#handleConvert" styleClass="Convert_Button" prefWidth="150" prefHeight="40"/>
            </VBox>

            <!-- Input Part -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;" prefWidth="450">
                <Label text="Input" styleClass="Input_Character"/>

                <TextField fx:id="nameField"
                           promptText="Name"
                           styleClass="text-field"
                           prefHeight="40"/>

                <TextField fx:id="amountField"
                           promptText="Amount"
                           styleClass="text-field"
                           prefHeight="40"/>

                <TextField fx:id="categoryField"
                           promptText="Category"
                           styleClass="text-field"
                           prefHeight="40"/>

                <HBox alignment="BOTTOM_RIGHT">
                    <Button text="Save" onAction="#handleSave" styleClass="Handle_Button" prefWidth="120" prefHeight="40"/>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</VBox>