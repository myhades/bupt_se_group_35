                </graphic>
            </Button>
            <Label text="Manual Entry" styleClass="ManualEntry_Character"/>
            <Label text="●" styleClass="Dot"/>
        </HBox>

        <!-- The central main area -->
        <HBox spacing="50" alignment="CENTER" VBox.vgrow="ALWAYS">

            <!-- AI Recognition Part -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;" prefWidth="400">
                <Label text="AI Recognition" styleClass="AI_Rec_Character"/>

                <StackPane>
                    <TextArea fx:id="aiTextArea"
                              promptText="Describe with natural language"
                              styleClass="text-area"
                              prefHeight="200" prefWidth="350"/>

                    <Button onAction="#handleMicro" styleClass="Micro_Button" StackPane.alignment="BOTTOM_RIGHT">
                        <graphic>
<!--                            <ImageView fx:id="MicrophoneImageView" fitWidth="30" fitHeight="30"/>-->
                            <SVGPath content="M111,314 C111,311.238 113.239,309 116,309 C118.761,309 121,311.238 121,314 L121,324 C121,326.762 118.761,329 116,329 C113.239,329 111,326.762 111,324 L111,314 L111,314 Z M116,331 C119.866,331 123,327.866 123,324 L123,314 C123,310.134 119.866,307 116,307 C112.134,307 109,310.134 109,314 L109,324 C109,327.866 112.134,331 116,331 L116,331 Z M127,326 L125,326 C124.089,330.007 120.282,333 116,333 C111.718,333 107.911,330.007 107,326 L105,326 C105.883,330.799 110.063,334.51 115,334.955 L115,337 L114,337 C113.448,337 113,337.448 113,338 C113,338.553 113.448,339 114,339 L118,339 C118.552,339 119,338.553 119,338 C119,337.448 118.552,337 118,337 L117,337 L117,334.955 C121.937,334.51 126.117,330.799 127,326 L127,326 Z" styleClass="micro-icon"/>
                        </graphic>
                    </Button>
                </StackPane>

                <Button text="Convert →" onAction="#handleConvert" styleClass="Convert_Button" prefWidth="150" prefHeight="40"/>
            </VBox>

            <!-- Input Part -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;" prefWidth="450">
                <Label text="Input" styleClass="Input_Character"/>

                <TextField fx:id="nameField"
                           promptText="Name"
                           styleClass="text-field"
                           prefHeight="40"/>

                <TextField fx:id="amountField"
                           promptText="Amount"
                           styleClass="text-field"
                           prefHeight="40"/>

                <TextField fx:id="categoryField"
                           promptText="Category"
                           styleClass="text-field"
                           prefHeight="40"/>

                <HBox alignment="BOTTOM_RIGHT">
                    <Button text="Save" onAction="#handleSave" styleClass="Handle_Button" prefWidth="120" prefHeight="40"/>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</VBox>