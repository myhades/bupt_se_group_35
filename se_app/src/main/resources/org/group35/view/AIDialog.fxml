            fx:controller="org.group35.view.AIDialogController"
            stylesheets="@AIDialog.css"
            styleClass="ai-overlay-panel"
            prefWidth="490"
            prefHeight="210">

    <!-- Header with title and back button - å®Œå…¨ç…§æ¬Recommendationçš„ç»“æž„ -->
